<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ProductListActivity">

    <!-- TextView to display detailed instructions (initially hidden or showing a default message) -->
    <TextView
        android:id="@+id/productDetailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select a product from the list below to see instructions."
        android:textSize="18sp"
        android:paddingBottom="16dp"/>

    <!-- ListView to display the list of available products -->
    <ListView
        android:id="@+id/listViewProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Delete button -->
    <Button
        android:id="@+id/btnDeleteInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Saved Instructions"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

</LinearLayout>